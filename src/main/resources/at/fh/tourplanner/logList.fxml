<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fh.tourplanner.controller.Log.LogListController">
    <GridPane alignment="BASELINE_RIGHT" VBox.vgrow="NEVER">
        <columnConstraints>
            <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="NEVER" minWidth="10.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
        <Button fx:id="createButton" defaultButton="true" mnemonicParsing="false"
                onAction="#openBlankLogFormButtonAction" text="Create New"
                GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="10.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="editButton" defaultButton="true" mnemonicParsing="false" onAction="#openFilledFormButtonAction" text="Edit" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="10.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="deleteButton" defaultButton="true" mnemonicParsing="false" onAction="#deleteButtonAction" text="Delete" GridPane.columnIndex="2" GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="10.0" />
            </GridPane.margin>
        </Button>
    </GridPane>
    <TableView fx:id="logList" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <columns>
            <TableColumn fx:id="timeStamp" prefWidth="75.0" text="Date/Time" />
            <TableColumn fx:id="rating" prefWidth="75.0" text="Rating" />
            <TableColumn fx:id="difficulty" prefWidth="75.0" text="Difficulty" />
            <TableColumn fx:id="duration" prefWidth="75.0" text="Total Time" />
            <TableColumn fx:id="comment" minWidth="-Infinity" prefWidth="230.0" text="Comment" />
        </columns>
        <VBox.margin>
            <Insets bottom="15.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </TableView>
</VBox>
